<ui:UiPage x:Class="LipUI.Views.Pages.DeveloperPage"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
           xmlns:local="clr-namespace:LipUI.Views.Pages"
           xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
           xmlns:controls="clr-namespace:LipUI.Views.Controls"
           d:DataContext="{d:DesignInstance local:DeveloperPage,  IsDesignTimeCreatable=False}"
           mc:Ignorable="d" 
           d:DesignHeight="450" d:DesignWidth="800"
           Title="DeveloperPage">
    <Grid>
        <Grid Visibility="{Binding ViewModel.GlobalConfig.DeveloperMode,Converter={StaticResource InvBooleanToVisibilityConverter}}">
            <TextBlock Text="请到设置页面连续点击5次版本号开启开发者模式"/>
        </Grid>
        <Grid Visibility="{Binding ViewModel.GlobalConfig.DeveloperMode,Converter={StaticResource BooleanToVisibilityConverter}}">
            <controls:ToothJson DataContext="{Binding ViewModel.ToothJson}" />
        </Grid>
    </Grid>
</ui:UiPage>
