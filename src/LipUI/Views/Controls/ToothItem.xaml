<UserControl x:Class="LipUI.Views.Controls.ToothItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LipUI.Views.Controls"
             xmlns:models="clr-namespace:LipUI.ViewModels"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             d:DataContext="{d:DesignInstance models:ToothItemViewModel,IsDesignTimeCreatable=False}"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800">
    <ui:Card Margin="10" HorizontalAlignment="Stretch">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <DockPanel >
                <TextBlock Text="包名：" Style="{StaticResource Title}"/>
                <TextBlock Text="{Binding PackageName}" Style="{StaticResource Title}"/>
            </DockPanel>
            <DockPanel Grid.Row="1">
                <TextBlock Text="描述："/>
                <TextBlock TextWrapping="WrapWithOverflow" Text="{Binding PackageDescription}"/>
            </DockPanel> 
            <DockPanel Margin="5" Grid.Row="0" Grid.RowSpan="2" Grid.Column="1">
                <Button>详细信息</Button>
            </DockPanel> 
        </Grid>
    </ui:Card>
</UserControl>
